@model Movie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
<div class="card" style="width:100%; height:100%; background-color:lightgray">
    <h5 class="card-title" style="font-size:xx-large">
        @Model.Title
    </h5>
    <div class="row">
        <div class="column", style="float: left; width: 33.33%; padding: 5px;">
            <img src="https://www.generationsforpeace.org/wp-content/uploads/2018/03/empty.jpg" style="width:100%">
        </div>
        <div class="column", style="float: left; width: 33.33%; padding: 5px;">
            <img src="https://www.generationsforpeace.org/wp-content/uploads/2018/03/empty.jpg" style="width:100%">
        </div>
        <div class="column", style="float: left; width: 33.33%; padding: 5px;">
            <img src="https://www.generationsforpeace.org/wp-content/uploads/2018/03/empty.jpg" style="width:100%">
        </div>
    </div>
    <div class="col-md-8">
        <p class="card-text" style="font-size:x-large">
            <b>Genres: </b>
            @foreach (var genre in Model.Genres)
            {
                <div class="column">
                    @genre
                </div>
            }
        </p>
        <p class="card-text" style="font-size:x-large">
            <b>User Reviews: </b>
            <a class="btn btn-outline-primary float-right" asp-controller="Review" asp-action="SubmitForm" asp-route-IdMovie=@Model.IdMovie>
                Add Review + 
            </a>
            <hr />
            @foreach (var review in Model.Reviews)
            {                                     
                <div class="column" style="font-size:large; font-weight:bold; line-height: 30px">
                    @review.User.UserName                      
                </div>
                <div class="column">
                    @review.Text  
                </div>
            }
            <a class="btn btn-outline-primary float-right" asp-action="GetMovies">
                Go back 
            </a>
        </p>
    </div>
</div>


 